<form action="/sortBy" method="post" id="sortByForm">
	<label for="sortByInput">Sort by</label>
	<select name="sortBySelector" id="sortBySelector">
		<option disabled selected value> -- select an option -- </option>
		<option value="highestrating">Highest Rated</option>
		<option value="mostFavorites">Most Favorites/Likes</option>
		<option value="mostReviews">Most Reviewed</option>
	</select>
</form>
<form id="filterForm">
	{{#each tags}}
	<label for="{{this}}Input">{{This}}</label>
	<input type="checkbox" id="{{this}}Input" name="{{this}}Input" value="{{this}}">
	{{/each}}
	<button type="submit">Apply Filters</button>
</form>
<a class="" id="resetFilters" href="/bars">Reset Filters</a>


<ul id="barList">

	{{#if location}}
	{{#each bars}}
	<li>
		<div class="row"></div>
		<a href="/bars/{{bar._id}}">
			<div class="card">
				{{bar.name}} <br>
				{{distance}} mi from you!<br>
				@ {{duration}} driving <br>
				{{bar.location.city}} <br>
				{{bar.ratingAverage}} <br>
				{{bar.reviewsCount}} reviews <br>
				{{bar.favoritesCount}} favorites <br>
			</div>
		</a>
	</li>
	{{/each}}
	{{else}}
	{{#each bars}}
	<li>
		<div class="row"></div>
		<a href="/bars/{{_id}}">
			<div class="card">
				{{name}} <br>
				{{location.city}} <br>
				{{ratingAverage}} <br>
				{{reviewsCount}} reviews <br>
				{{favoritesCount}} favorites <br>
			</div>
		</a>
	</li>
	{{/each}}
	{{/if}}
</ul>