<div class="form-container">
	<div class="form-box">
		<p id="error" class="error" hidden></p>
		<form action="/reports" method="POST" class="reports-form" id="reports-form">
			<div class="side">
				<h2>#ContactUs üçª</h1>

					<div class="input-box">
						<label class="input-label" for="firstNameInput">#YourName</label>
						<input class="input" type="text" id="firstNameInput" name="firstNameInput" required=""
							value="{{firstNameInput}} {{lastNameInput}}">
					</div>

					<div class="input-box">
						<label class="input-label" for="emailInput">#YourEmail</label>
						<input class="input" type="email" id="emailInput" name="emailInput" required=""
							value="{{emailInput}}">
					</div>

					<div class="input-box">
