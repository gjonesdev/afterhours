<ul>
	<li><a href="/account" id="account-tab">Account Info</a></li>
	<li><a href="/account/favorites" id="favorites-tab">Favorites</a></li>
	<li><a href="/account/reviews" id="reviews-tab">My Reviews</a></li>
	{{#if account.bars}}
	<li><a href="/account/bars" id="bars-tab">My Bars</a></li>
	{{/if}}
</ul>

<div id="review-section">
	<h1>Reviews From You:</h1>
	{{#if reviews}}
	{{#each reviews}}
	<div>
		<p>Bar Name: {{this.barName}}</p>
		<p>Rating: {{this.rating}}</p>
		{{#if this.comment}}
			<p>Comment: {{this.comment}}</p>
		{{/if}}
		<p>Date: {{this.date}}</p>
		<a href="/reviews/edit/{{this._id}}">Edit</a>
		<a href="/reviews/delete/{{this._id}}">Delete</a>
	</div>
	{{/each}}
	{{else}}
	<p>No reviews yet.</p>
	{{/if}}
</div>