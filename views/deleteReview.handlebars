
<div>
    <!-- Server Side Error -->
    {{#if error}}
        <p> {{error}} </p>
    {{/if}}

    <div class="form-container">
	<div class="form-box">
		<h2>#DeleteReview 🗑️</h2>
<form class="deleteReview-form" id="deleteReview-form" action="/reviews/delete/{{review._id}}" method="POST">
			<div class="input-box">
    <p>Are you sure you want to delete this review?</p>
    <p>Bar Name: {{review.barName}}</p>
    <p>Rating: {{review.rating}}</p>
    <p>Comment: {{review.comment}}</p>
    
    <form action="/reviews/delete/{{review._id}}" method="post">
        <button type="submit">Yes, Delete</button>        
    </form>
    <a href="/account" class="cancel-button">Cancel</a>

</div>