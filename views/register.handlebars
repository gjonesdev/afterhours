<div class="login-container">
	<div class="login-box">
		<h2>#Register ðŸ¥‚</h2>
		<form class="registration-form" id="registration-form" action="/account" method="POST">
			<div class="user-box">

				<input class="input" type="text" id="firstNameInput" name="firstNameInput" required=""
					value="{{form.firstNameInput}}">
				<label class="input-label" for="firstNameInput">First Name</label>
			</div>
			<div class="user-box">
				<input class="input" type="text" id="lastNameInput" name="lastNameInput" required=""
					value="{{form.lastNameInput}}">
				<label class="input-label" for="lastNameInput">Last Name</label>
			</div>

			<div class="user-box">

				<input class="input" type="email" id="emailInput" name="emailInput" required=""
					value="{{form.emailInput}}">
				<label class="input-label" for="emailInput">Email</label>
			</div>
			<div class="user-box">

				<input class="input" type="phone" id="phoneInput" name="phoneInput" required=""
					value="{{form.phoneInput}}">
				<label class="input-label" for="phoneInput">Phone Number</label>
			</div>

			<div class="user-box">

				<input class="input" type="password" id="passwordInput" name="passwordInput" required="">
				<label class="input-label" for="passwordInput">Password</label>

			</div>
			<div class="user-box">

				<input class="input" type="password" id="confirmPasswordInput" name="confirmPasswordInput" required="">
				<label class="input-label" for="confirmPasswordInput"> Confirm Password</label>
			</div>
			<div class="user-box">

				<p>Account type:</p>
				<select class="input" id="accountTypeInput"  name="accountTypeInput" required="">
					<option selected="selected" value="patron">#User</option>
					<option value="owner">#Owner/BarAdmin</option>
					<label class="input-label" for="accountTypeInput">Account Type</label>
				</select>
			</div>
			<button type="submit" class="submit-button">
				<span></span>
				<span></span>
				<span></span>
				<span></span>
				#GrooveIn
			</button>

		</form>
	</div>

	<div class="message-container">

		{{#if error}}
		<p class="response-error">Error {{error.status}}: {{error.message}}</p>
		{{/if}}
		<ul id="error-list" class="error-list hide"></ul>
		<p>Already have an account?</p></br>
		<a class="link" href="/login">Click here to login!</a>


	</div>

</div>