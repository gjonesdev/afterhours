
    <!-- Server Side Error -->
    {{#if error}}
        <p> {{error}} </p>
    {{/if}}

    <div class="form-container">
         <h1 class="reviews-title">#EditYourReview:</h1>
   <div id="editReview-section">
        <div class="form-box">
            <form action="/reviews/edit/{{review._id}}" method="post" id="editReviewForm">
                <input type="hidden" name="barId" value="{{review.barId}}" id="barIdInput">
                <input type="hidden" name="barName" value="{{review.barName}}" id="barNameInput">

                <label style="color: rgb(228, 228, 235);">Choose your new rating below:</label>
                <fieldset class="rating">
                    <label for="ratingInput1">🍺 #DiveDisaster (1/5)</label>
                    <input type="radio" name="rating" id="ratingInput1" value="1">
                    <br>
                    <label for="ratingInput2">🍺🍺 #Mehpub (2/5)</label>
                    <input type="radio" name="rating" id="ratingInput2" value="2">
                    <br>
                    <label for="ratingInput3">🍺🍺🍺 #SlightlySketchy (3/5)</label>
                    <input type="radio" name="rating" id="ratingInput3" value="3">
                    <br>
                    <label for="ratingInput4">🍺🍺🍺🍺 #CoolCorner (4/5)</label>
                    <input type="radio" name="rating" id="ratingInput4" value="4">
                    <br>
                    <label for="ratingInput5">🍺🍺🍺🍺🍺 #Legendary (5/5)</label>
                    <input type="radio" name="rating" id="ratingInput5" value="5">
                </fieldset>

                <br>
                <label style="color: rgb(228, 228, 235);"> Edit your comment below:</label>
                <textarea class="commentArea" name="comment" id="commentInput" cols="40" rows="3">{{review.comment}}</textarea>

                <button type="submit">Save Changes</button>
                 <button onclick="window.location.href='/account'" style="color: white; background-color: inherit; border: none; cursor: pointer;">Cancel</button>
            </form>
        </div>
    </div>
</div>
