<div class="edit-container">
    <div class="form-box">
        <h2>#Update Login Info ðŸ”’</h2>
        <ul id="account-error-list" class="error-list"></ul>
        <form
            class="account-form"
            id="account-form"
            action="/account"
            method="POST"
        >

            <div class="input-box">
                <label class="input-label" for="emailInput">Updated Email</label>
                <input
                    class="input"
                    type="email"
                    id="emailInput"
                    name="emailInput"
                    value="{{account.email}}"
                />
            </div>

            <div class="input-box">
                <label class="input-label" for="newPasswordInput">New Password</label>
                <input
                    class="input"
                    type="password"
                    id="newPasswordInput"
                    name="newPasswordInput"
                />
            </div>

            <div class="input-box">
                <label class="input-label" for="confirmPasswordInput">Confirm
                    Password</label>
                <input
                    class="input"
                    type="password"
                    id="confirmPasswordInput"
                    name="confirmPasswordInput"
                />
            </div>

            <div class="input-box">
                <label class="input-label" for="currentPasswordInput">Current
                    Password</label>
                <input
                    class="input"
                    type="password"
                    id="currentPasswordInput"
                    name="currentPasswordInput"
                />
            </div>

            <input type="hidden" name="_method" value="PUT" />
            <button type="submit" class="submit-button">Save</button>
        </form>
    </div>

    <div class="form-box">
        <h2>#Update User Info ðŸ”§ðŸ”¨</h2>
        <ul id="user-error-list" class="error-list hide"></ul>
        <form class="user-form" id="user-form" action="/user" method="POST">
            <div class="input-box">
                <label class="input-label" for="firstNameInput">First Name</label>
                <input
                    class="input"
                    type="text"
                    id="firstNameInput"
                    name="firstNameInput"
                    value="{{user.firstName}}"
                />
            </div>

            <div class="input-box">
                <label class="input-label" for="lastNameInput">Last Name</label>
                <input
                    class="input"
                    type="text"
                    id="lastNameInput"
                    name="lastNameInput"
                    value="{{user.lastName}}"
                />
            </div>

            <div class="input-box">
                <label class="input-label" for="phoneInput">Phone Number</label>
                <input
                    class="input"
                    type="phone"
                    id="phoneInput"
                    name="phoneInput"
                    value="{{user.phone}}"
                />
            </div>

            <input type="hidden" name="_method" value="PUT" />
            <button type="submit" class="submit-button">Save</button>
        </form>
    </div>
</div>

